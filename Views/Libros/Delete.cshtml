@model Biblioteca_MVC.Models.Libro

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar libro</h1>

<h3>Deseas borrar este libro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Autor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Autor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CantPaginas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CantPaginas)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ISBN" />
        <input class="btn btn-sm btn-dark"  type="submit" value="Eliminar libro" class="btn btn-danger" /> |
        <a class="btn btn-sm btn-dark" asp-action="Index">Volver a la lista</a>
    </form>
</div>
