
@{
    ViewData["Title"] = "Estadísticas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<h3 class="text-center" >Estadísticas</h3>

    <div class="container">
        <div class="row2">
            <div class="col-md-6">
                <table class="tabla stats">
                    <thead>
                        <tr>
                            <th>Cantidad de libros en stock</th>
                            <th>Cantidad de libros alquilados</th>
                            <th>Valor total del stock</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@ViewBag.CantidadStock</td>
                            <td>@ViewBag.CantidadAlquilados</td>
                            <td>$@ViewBag.ValorTotalStock</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <canvas id="chart" width="200" height="200"></canvas>
            </div>
        </div>
    </div>

<script>
    var ctx = document.getElementById('chart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Libros en stock', 'Libros alquilados'],
            datasets: [{
                label: 'Distribución de libros',
                data: [@ViewBag.CantidadStock, @ViewBag.CantidadAlquilados],
                backgroundColor: ['rgb(54, 162, 235)', 'rgb(255, 99, 132)']
            }]
        }
    });
</script>